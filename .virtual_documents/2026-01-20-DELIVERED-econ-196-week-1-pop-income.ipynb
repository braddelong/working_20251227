import numpy as np
import pandas as pd # get libraries

human_history_df = pd.DataFrame(
                    list(pop.items()),
                    columns=['year', 'population']
                    )

human_history_df








# let us now start drawing some graphs

import matplotlib.pyplot as plt

ax = human_history_df.plot(
    x="year",
    y="population",
    kind="line",
    legend=True,                         # show legend
    label="World Population (millions)"  # legend label
)

ax.set_title("World Population Over Time")   # title
ax.set_xlabel("Year")
ax.set_ylabel("Population (millions)")

plt.tight_layout()
plt.show()


# a logarithmic scale: equal heights are equal multiples, and constant growth-rate paths are straight lines

ax = human_history_df.plot(
    x="year",
    y="population",
    kind="line",
    legend=True,                         # show legend
    label="World Population (millions)"  # legend label
)

ax.set_title("World Population Over Time: Log Scale")   # title
ax.set_xlabel("Year")
ax.set_ylabel("Population (millions)")
ax.set_yscale("log")  

plt.tight_layout()
plt.show()


